{
  "extends": [
    "config:base",
    ":gitSignOff",
    ":disableDependencyDashboard"
  ],
  "ignorePaths": [
    ".github/**"
  ],
  "labels": [
    "dependency"
  ],
  "separateMinorPatch": true,
  "postUpgradeTasks": {
    "commands": [
      "make gen-golden-all"
    ],
    "fileFilters": [
      "tests/golden/**"
    ],
    "executionMode": "update"
  },
  "suppressNotifications": [
    "artifactErrors"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch",
        "digest"
      ],
      "matchCurrentVersion": "!/^v?0\\./",
      "automerge": true,
      "platformAutomerge": false,
      "labels": [
        "dependency",
        "automerge",
        "bump:patch"
      ]
    }
  ]
}
